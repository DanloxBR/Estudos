package com.dio.Mercado;

import java.util.ArrayList;
import java.util.Scanner;

public class MiniCrudProdutos {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        ArrayList<Produto> produtos = new ArrayList<>();
        int opcao;

        do {
            System.out.println("--- MENU ---");
            System.out.println("1. Adicionar produto");
            System.out.println("2. Listar produtos");
            System.out.println("3. Editar produto");
            System.out.println("4. Remover produto");
            System.out.println("5. Valor total do estoque");
            System.out.println("6. Sair");
            System.out.print("Escolha uma opção: ");
            opcao = sc.nextInt();
            sc.nextLine(); // consumir enter

            switch (opcao) {
                case 1:
                    System.out.print("Nome do produto: ");
                    String nome = sc.nextLine();
                    System.out.print("Preço: ");
                    double preco = sc.nextDouble();
                    System.out.print("Quantidade: ");
                    int qtd = sc.nextInt();
                    sc.nextLine();
                    produtos.add(new Produto(nome, preco, qtd));
                    System.out.println("Produto adicionado!");
                    break;

                case 2:
                    if (produtos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado.");
                    } else {
                        System.out.println("\n--- Lista de Produtos ---");
                        for (Produto p : produtos) {
                            System.out.println("Nome: " + p.getNome() +
                                    ", Preço: " + p.getPreco() +
                                    ", Quantidade: " + p.getQuantidade() +
                                    ", Valor total: " + p.valorTotal());
                        }
                    }
                    break;

                case 3:
                    System.out.print("Digite o nome do produto para editar: ");
                    String nomeEditar = sc.nextLine();
                    Produto produtoEditar = null;
                    for (Produto p : produtos) {
                        if (p.getNome().equalsIgnoreCase(nomeEditar)) {
                            produtoEditar = p;
                            break;
                        }
                    }
                    if (produtoEditar != null) {
                        System.out.print("Novo nome: ");
                        produtoEditar.setNome(sc.nextLine());
                        System.out.print("Novo preço: ");
                        produtoEditar.setPreco(sc.nextDouble());
                        System.out.print("Nova quantidade: ");
                        produtoEditar.setQuantidade(sc.nextInt());
                        sc.nextLine();
                        System.out.println("Produto atualizado!");
                    } else {
                        System.out.println("Produto não encontrado.");
                    }
                    break;

                case 4:
                    System.out.print("Digite o nome do produto para remover: ");
                    String nomeRemover = sc.nextLine();
                    produtos.removeIf(p -> p.getNome().equalsIgnoreCase(nomeRemover));
                    System.out.println("Produto removido (se existia).");
                    break;

                case 5:
                    double totalEstoque = 0;
                    for (Produto p : produtos) {
                        totalEstoque += p.valorTotal();
                    }
                    System.out.println("Valor total do estoque: " + totalEstoque);
                    break;

                case 6:
                    System.out.println("Saindo...");
                    break;

                default:
                    System.out.println("Opção inválida!");
            }

        } while (opcao != 6);

        sc.close();
    }
}
