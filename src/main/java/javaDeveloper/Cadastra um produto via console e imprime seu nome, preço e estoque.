package com.dio.atividades;

import java.util.Scanner;

public class Atividades {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Escreva o nome do produto: ");
        String nomProduto = sc.next();

        System.out.println("Escreva o preço do produto: ");
        Double precoProduto = sc.nextDouble();

        System.out.println("Escreva a quantidade em estoque: ");
        int estoque = sc.nextInt();

        System.out.printf("Produto cadastrado: %s | Preço: R$ %.2f | Estoque: %d%n",
                nomProduto, precoProduto, estoque);

        sc.close();
    }
}
